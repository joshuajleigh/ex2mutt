# Set default values for all following accounts.
defaults
auth              on
tls               off
logfile           ~/.msmtp.log

# ex2mutt
account           ex2mutt
host              localhost
port              1025
protocol          smtp
from              --ADFLATDOMAIN--\--ADUSERSHORT--
auth              login
user              --ADFLATDOMAIN--\--ADUSERSHORT--
password          --ADPASSWORD--

account default : ex2mutt
